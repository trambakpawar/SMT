{
  "name": "smt",
  "version": "1.0.0",
  "description": "Status Management Tool",
  "main": "index.js",
  "scripts": {
    "clean:reports": "if exist cypress\\reports rmdir /s/q cypress\\reports && mkdir cypress\\reports mkdir cypress\\reports\\mochareports",
    "pretest": "npm run clean:reports",
    "cypress:open": "cypress open",
    "merge": "mochawesome-merge cypress/report/mochawesome-report/*.json > cypress/report/output.json",
    "generate-report": "marge cypress/report/output.json --reportDir ./ --inline",
    "mainreport": "npm run pretest && npm run merge && npm run generate-report"
  },
  "author": "Trambak Pawar",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^8.7.0",
    "cypress-cucumber-preprocessor": "^4.3.0",
    "cypress-mochawesome-reporter": "^2.3.0",
    "mocha": "^9.1.3",
    "mochawesome": "^6.3.1",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^5.2.0"
  },
  "cypress-cucumber-preprocessor": {
    "cucumberJson": {
      "generate": true
    },
    "nonGlobalStepDefinitions": false,
    "step_definitions": "./cypress/integration/step_definitions/"
  },
  "dependencies": {
    "dotenv": "^10.0.0"
  }
}
